@import 'config.styl';

::selection {
  background: #fde6ba;
  color: #000;
}

/**
 * style components
 */
.overflow-hidden {
  overflow: hidden;
}
.left {
  float: left;
}

.right {
  float: right;
}

/**
 * Top Bar
 */
.topheader {
  -webkit-user-select: none;
  height: 0.66rem;
  line-height: 0.66rem;
  padding: 0 0.2rem;
  position: relative;
  background: $color-dark;
  border-bottom: 1px solid darken($color-primary, 10%);
  
  * {
    padding: 0;
    margin: 0;
    color: $color-primary;
  }

  a:hover {
    text-decoration: none;
  }

  .title {
    font-size: 0.24rem;
  }

  .nav {
    list-style-type: none !important;
  }
  .nav-item {
    float: left;
    margin-right: 0.2rem;
    height: 0.66rem;
    display: flex;
    align-items: center;
    a {
      color: darken($color-white, 5%);
    }
    a:hover {
      color: darken($color-white, 10%);
    }
    a:active {
      color: darken($color-white, 15%);
    }
  }
}

/**
 * markdowner-wrapper
 */
.markdowner-wrapper {
  position: absolute;
  top: 66px;
  left: 0;
  right: 0;
  bottom: 0;
  display:flex;
  justify-content: space-between;
  background: $color-secondary;
  .input-wrapper {
    width: 50%;
    position: relative;
    background: $color-secondary;
    #input {
      position: absolute;
      width: 100%;
      top: 0.5rem;
      bottom: 0;
      padding: 0 0.3rem 0.2rem;
      overflow: auto;
      border: none;
      outline: none;
      resize: none;
      font-size: 0.15rem;
      font-family: inherit;
      color: $color-light;
      cursor: text;
      background: $color-secondary;
    }
  }

  .output-wrapper {
    width: 50%;
    position: relative;
    background: $color-white;
    #output {
      position: absolute;
      top: 0.5rem;
      bottom: 0;
      padding: 0 0.3rem 0.2rem;
      width: 100%;
      overflow: auto;
      -webkit-overflow-scrolling: touch;
      background: $color-white;
    }
  }
} 

